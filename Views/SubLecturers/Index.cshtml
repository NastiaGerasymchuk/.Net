            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["SubjectNameSortParam"]">@Html.DisplayNameFor(model => model.Subject.SubjName)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lecturer.Person.FirstName)
